@model CaimanProject.Models.Contact

<main class="main-content">
    <div class="block">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb bg-white">
                            <li class="breadcrumb-item"><a href="/Contact/Contact">Contact</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Nouveau contact</li>
                        </ol>
                    </nav>
                </div>
                <div class="col-12">
                    <div class="departmentDesc">
                        <h1>Nouveau contact</h1>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="simple-card">
                        <div class="simple-card__content">
                            <form action="#" name="myForm" class="formular" method="post">
                                <div class="form-row">
                                    <div class="form-group col-md-6 mb-5">
                                        <label for="nom">Nom</label>
                                        <input type="text" class="form-control" id="ContactName" name="ContactName">
                                        <p style="color:red;" id="demo"></p>
                                    </div>
                                    <div class="form-group col-md-6 mb-5">
                                        <label for="prenoms">Prénoms</label>
                                        <input type="text" class="form-control" id="ContactPname" name="ContactPname">
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6 mb-5">
                                        <label for="email">Email</label>
                                        <input type="email" class="form-control" id="ContactEmail" name="ContactEmail">
                                    </div>
                                    <div class="form-group col-md-6 mb-5">
                                        <label for="tel">Téléphone</label>
                                        <input type="text" class="form-control" id="ContactNumber" name="ContactNumber">
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group col-md-6 mb-5">
                                        <label for="website">Site web</label>
                                        <input type="text" class="form-control" id="ContactSite" name="ContactSite">
                                    </div>
                                    <div class="form-group col-md-6 mb-5">
                                        <label for="role">Fonction</label>
                                        <input type="text" class="form-control" id="ContactFonction" name="ContactFonction">
                                    </div>
                                </div>

                                <button type="submit" class="btn-green" onclick="myFunction()">
                                    Enregistrer
                                </button>
                                <p style="color:red;" id="demo"></p>
                            </form>

                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</main>
<script>
    function myFunction() {
        var x, text;

        // Get the value of the input field with id="numb"
        x = document.getElementById("ContactName").value;

        // If x is Not a Number or less than one or greater than 10
        if (x == "") {
            text = "Input not valid";
        } else {
            text = "Input OK";
        }
        document.getElementById("demo").innerHTML = text;
    }
</script>