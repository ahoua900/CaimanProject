                        </li>
                    </ul>
                </div>

                <ul class="nav-actions">
                    <li>
                        <a href="/MemberCt/AddMember">
                            <div>
                                <img src="~/Content/icons/adduser.svg" alt="add">
                            </div>
                        </a>
                    </li>
                    <li>
                        <a href="/Home/AddProject">
                            <div>
                                <img src="~/Content/icons/rocket.svg" alt="project">
                            </div>
                        </a>
                    </li>
                    <li>
                        <a href="admprofil.html">
                            <div>
                                <img src="~/Content/img/user.png" alt="username" class="admin">
                            </div>
                        </a>
                    </li>
                    <li class="respm">
                        <div id="resmenu">
                            <img src="~/Content/icons/menu.svg" alt="">
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
   
    @RenderBody()

    <script src="~/Scripts/js/jquery.min.js"></script>
    <script src="~/Scripts/js/main.js"></script>
    <script src="~/Scripts/js/bootstrap.min.js"></script>
</body>
</html>
