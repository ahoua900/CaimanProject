<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Caiman</title>

    <link rel="stylesheet" href="~/Content/style/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/style/main.css">

    <link rel="shortcut icon" type="image/png" href="~/Content/img/logo-nan.png" />
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans&family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <div class="top-bar">
        <div class="block">
            <div class="container-fluid">
                <h3>Kay Donald admin</h3>
            </div>
        </div>
    </div>
    <nav class="navigation-bar">
        <div class="block">
            <div class="container-fluid position-relative">
                <div class="nav-content">

                    <a href="@Url.Action("Index", "Home")">
                        <img src="~/Content/icons/crocodile.svg" alt="logo caiman" class="img-logo">
                    </a>
                    <ul class="main-menu" id="menu-list">
                        <li>
                            @Html.ActionLink("Accueil", "Index", "Home")
                            <img src="~/Content/icons/arrowb.svg" alt="arrow">
                        </li>
                        <li>
                            @Html.ActionLink("Departements", "Departement", "Departement")
                            <img src="~/Content/icons/arrowb.svg" alt="arrow">
                        </li>
                        <li>
                            <div class="dropdown">
                                <button class="dropbtn">Archives</button>
                                <div class="dropdown-content">
                                    <a href="/Home/FinProjet">Projets terminés <img src="~/Content/icons/arrowb.svg" alt="arrow"></a>
                                    <a href="/Archive/Archive">Anciens membres <img src="~/Content/icons/arrowb.svg" alt="arrow"></a>
                                </div>
                            </div>
                        </li>
                        <li>
                            @Html.ActionLink("Contact", "Contact", "Contact")
