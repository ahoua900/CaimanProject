@model CaimanProject.Models.Specialite
<main class="main-content">

    <div class="block">
        <div class="container-fluid">
            <div class="row department-row">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6 col-xl-6">
                    <div class="row">
                        <div class="col-12">
                            <div class="team-card">
                                <div class="team-card__illustration">
                                    <img src="@Html.DisplayFor(model => model.Url_Image)/@Html.DisplayFor(model => model.ImageSpecialité)" alt="departement">
                                </div>
                                <div class="mt-5">
                                    <button class="btn-green" data-toggle="modal" data-target="#respo">Choisir le chef</button>
                                    <button class="btn-tlight" data-toggle="modal" data-target="#vicerespo">choisir l'adjoint</button>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-6 col-xl-6">
                    <div class="departmentDesc">
                        <h1>Membres de groupe @Html.DisplayFor(model => model.SpecialiteName)</h1>
                        <p>
                            Lorem ipsum dolor sit amet consectetur adipisicing elit.
                            Dolor quaerat, molestias inventore tempora autem, sed,
                            libero laudantium porro fugit repellendus vel ipsa
                            adipisci aperiam pariatur dolores? Ex perspiciatis
                            dolores fuga.
                        </p>
                        <ul class="dmembers-list">
                            @foreach (var item in ViewBag.Membern)
                            {

                                <li>
                                    <a href="/Departement/ProfilMember/@item.MemberId">
                                        <div class="member-line">
                                            <div class="photo-box" style="border:2px solid @Html.DisplayFor(model => model.SpecialiteColor)">
                                                @if (item.MemberImageName != null)
                                                {
                                                    <img src="/Fichier/@item.MemberImageName" alt="username">
                                                }
                                                else
                                                {
                                                    <img src="/Content/img/user.png" alt="username">
                                                }

                                            </div>
                                            <div class="member-line__info">
                                                <h4>@item.MemberName @item.MemberPnom</h4>
                                                <div class="d-flex align-items-center">
                                                    <span>Membre simple -</span>&nbsp;
                                                    @for (int i = 0; i < item.MemberNote;)
                                                    {
                                                        <div class="round"></div>
                                                        i++;
                                                    }
                                                </div>
                                                
                                                    <span>Etudiant--</span>&nbsp;
                                                    
                                             
                                            </div>
                                        </div>
                                    </a>
                                </li>
                            }

                        </ul>

                    </div>
                </div>

            </div>
        </div>
    </div>
</main>
<div class="modal fade" id="respo" tabindex="-1" role="dialog" aria-labelledby="respoTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content my-modal">
            <div class="modal-header">
                <h5 class="modal-title" id="respoTitle">Choix du responsable de département</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="#" method="post">
                    <ul class="dmembers-list">
                        @foreach (var item in ViewBag.Membern)
                        {
                            <li>
                                <div class="form__radio-group">
                                    <input type="radio" class="form__radio-input" id="user1" name="addforproject">
                                    <label for="user1" class="form__radio-label">
                                        <span class="form__radio-button"></span>
                                        <div class="member-line">
                                            <div class="photo-box br-frontend">
                                                @if (item.MemberImageName != null)
                                                {
                                                    <img src="/Fichier/@item.MemberImageName" alt="username">
                                                }
                                                else
                                                {
                                                    <img src="/Content/img/user.png" alt="username">
                                                }

                                            </div>
                                            <div class="member-line__info">
                                                <h4>@item.MemberName @item.MemberPnom</h4>
                                                <div class="d-flex align-items-center">
                                                    <span>Membre simple -</span>&nbsp;
                                                    <div class="round"></div>
                                                    <div class="round"></div>
                                                    <div class="round"></div>
                                                </div>
                                            </div>
                                        </div>
                                    </label>
                                </div>
                            </li>
                        }
                    </ul>

                    <br>
                    <button type="submit" class="btn-green">Valider</button>
                </form>
            </div>
        </div>
    </div>
</div>

